@page
@model EditLightScheduleModel

<div class="mx-auto mt-10 max-w-xl space-y-6 rounded-2xl bg-white p-6 text-gray-800 shadow-md dark:bg-gray-900 dark:text-gray-100">
	<h2 class="text-center text-2xl font-semibold">Edit Light Schedule</h2>

	<form method="post" class="space-y-4">
		<input type="hidden" asp-for="Schedule.Id" />

		<div>
			<label class="block text-sm font-medium text-gray-700 dark:text-gray-300">On Time</label>
			<input type="time" asp-for="Schedule.OnTime" required class="input w-full" />
		</div>

		<div>
			<label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Off Time (optional)</label>
			<input type="time" asp-for="Schedule.OffTime" class="input w-full" />
		</div>

		<div class="flex items-center justify-between pt-4">
			<button type="submit" class="btn-primary inline-flex items-center gap-1">
				<i data-lucide="save" class="h-4 w-4"></i>
				<span>Save Changes</span>
			</button>
			<a href="/" class="btn-outline inline-flex items-center gap-1">
				<i data-lucide="x" class="h-4 w-4"></i>
				<span>Cancel</span>
			</a>
		</div>
	</form>
</div>